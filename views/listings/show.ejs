<% layout("layouts/boilerplateCode")%>

<div class="show-containers">

    <div class="clicked-show">
            <div class="show-card" type="button">
                <img class="show-card-img" src="/assets/<%=details[0].image%>">
                <h4 class="item-title"><%=details[0].title%></details></h4>
            </div>
            <form href="/main/show/?id=<%=details[0]._id%>" method="post" class="order-now">
                <button class="buy-btn">Order now</button>
            </form>
    </div>
    
    <div class="show-all">
            <%- include("../includes/items.ejs") %>
    </div>

</div> 
