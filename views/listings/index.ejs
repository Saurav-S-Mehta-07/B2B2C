
<% layout("layouts/boilerplateCode")%>
    <div class="container">

        <div class="main-page">

            <div class="main-heading">

                <div class="main-title">
                    <h2 id="title">Add new item!</h2>
                   <form action="/addlist" method="get" class="add-btn-form">
                       <button id="title-btn">ADD</button>
                   </form>
                </div>

                <div class="main-title2">
                </div>
            </div>

            <marquee behavior="alternate" class="cards-container">

                <div class="cards listing-cards">

                 <% for(let listing of listings) { %>

                   <a href="/main.item" class="listing-links">
                    <div class="card">
                        <img class="cards-img" src="/assets/<%=listing.image%>" alt="">
                        <h4><%= listing.title %></h4>
                    </div>
                    <form class="dlt-listing-form" action="/main/<%= listing._id %>?_method=delete" method="post">
                        <button class="dlt-listing" type="submit">dlt</button>
                    </form>
                  </a>
                <% } %>

                </div>
            </marquee>

            <div class="content">

                 <div class="filter-content">
                    <a href="/main/?q=all">all</a>
                    <%for(let i of categories) { %>
                        <a href="/main/?q=<%=i%>"><%=i%></a>
                    <% }%>
                 </div>

                 <div class="content-cards cards">

                   <% for(let item of items){ %>

                    <a href="/main/item" class="item-links">

                     <div class="content-card card" type="button">

                        <form class="dlt-btn-form" action="/main/<%= item._id %>?_method=delete" method="post">
                          <button type="submit" class="dlt-btn">dlt</button>
                        </form>

                        <img class="content-card-img  cards-img" src="/assets/<%=item.image%>" alt="">
                        <h4><%= item.title %></h4>
                     </div>

                    </a>
                   <% } %>

                </div>

            </div>

        </div>

    </div>
</body>
</html>