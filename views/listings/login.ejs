<% layout("layouts/boilerplateCode")%>

<style>
    .login-page{
        height: 86%;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-items: center;
    }

    .login-form{
        background-color: white;
        width: 60%;
        height: 80%;
        display:inline;
        overflow: scroll;
        justify-self: center;
        align-self: center;
        border:2px solid #B0DB9C;
        box-shadow: 2px 2px 10px #568F87;
        border-radius: 12px;
        padding-left: 5%;
        padding-top: 2%;
        padding-bottom: 1%;
    }
   
    .login-form h1{
        color: #568F87;
        width: 90%;
        height: 10%;
        text-align: center;
    }

</style>

    <div class="add-list-form login-page">

        <form action="/main" class="login-form">   
           <h1 id="form-heading login-heading">Welcome to Eunwo! </h1>
            <div class="form-field">
                <label for="name">enter you name </label>
                <input type="text" placeholder=" enter name" name="name" required>
            </div>

            <div class="form-field">
                <label for="email">enter email</label>
                <input type="email" name="email" placeholder="  enter email" id="email" required>
            </div>

            <div class="form-field">
                <label for="number">number</label>
                <input type="number" name="number" placeholder="  enter number" id="number" required>
            </div class="form-field">

            <div class="form-field">
                <label for="shopname">shopname</label>
                <input type="text" name="shopname" placeholder="enter location " id="shopname" required>
            </div>

            <div class="form-field">
                <label for="location">location</label>
                <input type="text" name="location" placeholder="enter location " id="location" required>
            </div>

             <div class="form-field">
                <label for="city">city</label>
                <input type="text" name="city" placeholder="enter city " id="city" required>
            </div>

             <div class="form-field">
                <label for="role">select your position</label>
                <select name="role" id="role">
                    <option value="customer">Cutomer</option>
                    <option value="shopkeeper">Shopkeeper</option>
                    <option value="Vender">Vender</option>
                </select>
            </div>
            
            <button class="btn">Submit now!</button>
        </form>


    </div>
